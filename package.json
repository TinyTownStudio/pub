        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "dependencies": {
        "boxen": "^8.0.1",
        "boxt": "^1.1.2",
        "chalk": "^5.3.0",
        "chokidar": "^4.0.1",
        "cssnano": "^7.0.6",
        "esbuild": "^0.24.0",
        "htmlnano": "^2.1.1",
        "kleur": "^4.1.5",
        "marked": "^15.0.2",
        "mrmime": "^2.0.0",
        "postcss": "^8.4.49",
        "postcss-import": "^16.1.0",
        "postcss-load-config": "^6.0.1",
        "postcss-scss": "^4.0.9",
        "posthtml": "^0.16.6",
        "sade": "^1.8.1",
        "sirv": "^3.0.0",
        "svgo": "^3.3.2",
        "tempura": "^0.4.1",
        "terser": "^5.36.0",
        "tiny-glob": "^0.2.9"
    },
    "devDependencies": {
        "@barelyhuman/prettier-config": "^2.0.2",
        "chai": "^5.1.2",
        "chai-jest-snapshot": "^2.0.0",
        "mocha": "^10.8.2",
        "modern-normalize": "^3.0.1",
        "prettier": "^3.4.1",
        "publint": "^0.2.12",
        "should": "^13.2.3",
        "vitest": "^2.1.6"
    },
    "publishConfig": {
        "access": "public"
